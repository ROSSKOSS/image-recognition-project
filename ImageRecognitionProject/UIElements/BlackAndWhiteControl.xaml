<UserControl x:Class="UIElements.BlackAndWhiteControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:UIElements"
             mc:Ignorable="d" Height="69.784" Width="86.128">
    <Grid x:Name="host" Height="70" VerticalAlignment="Top">
       
        <Rectangle x:Name="body" Fill="White" Stroke="#FF0288D1" RadiusX="5" RadiusY="5" HorizontalAlignment="Left" Width="86" />
        <Rectangle Fill="#FF0288D1" Height="35" RadiusY="5" RadiusX="5" Stroke="#FF0288D1" VerticalAlignment="Top" Margin="0,0,1,0">
            <Rectangle.Clip>
                <RectangleGeometry Rect="0,-5,302,35" />
            </Rectangle.Clip>
        </Rectangle>
        <Label x:Name="titleLabel" Content="B&amp;W" Margin="30,3,2,0" VerticalAlignment="Top" Padding="5,4,5,5" Height="25" Foreground="White" FontFamily="Malgun Gothic Semilight" />
        <Image x:Name="image" HorizontalAlignment="Left" Height="15" Margin="8,8,0,0" VerticalAlignment="Top" Width="15"  Stretch="UniformToFill" />
    </Grid>
</UserControl>