<UserControl x:Class="UIElements.Trigger"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UIElements"
             mc:Ignorable="d" d:DesignWidth="300" Height="20" Width="40" MouseLeftButtonUp="UserControl_MouseLeftButtonUp">
    <Grid>
        <Rectangle x:Name="body" Fill="#FF0277BD" HorizontalAlignment="Left" Height="20" Stroke="#FF0288D1" VerticalAlignment="Top" Width="40" RadiusX="5" RadiusY="5"/>
        <Rectangle x:Name="button" Fill="White" HorizontalAlignment="Left" Height="20" RadiusY="5" RadiusX="5" Stroke="#FF0288D1" VerticalAlignment="Top" Width="20"/>
    </Grid>
</UserControl>
